{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["dom","es2015","es2016", "es2017", "es2018", "es2019", "es2020", "esnext"],
    "types": ["vite/client", "node"],
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "build",
    "noEmit": true,
    "rootDir": "./src",
    "rootDirs": ["./src"],
    "paths": {
      "@/*": ["src/*"],
      "@common/*": ["src/common/*"],
      "@components/*": ["src/components/*"],
      "@store/*": ["src/store/*"],
      "@views/*": ["src/views/*"]
    }
  },
  "include": [
    "./src",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/**/*.d.ts",
    "types/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
